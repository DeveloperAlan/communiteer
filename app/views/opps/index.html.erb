<h1>Opportunities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opps.each do |opp| %>
      <tr>
        <td><%= link_to opp.name, opp %></td>
        <td><%= opp.description %></td>
        <td><%= link_to 'Show', opp %></td>
        <td><%= link_to 'Edit', edit_opp_path(opp) %></td>
        <td><%= link_to 'Destroy', opp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opportunity', new_opp_path %>
