<h1>Welcome back <%= current_volunteer.first_name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @opps.each do |opp| %>
      <tr>
        <td><%= link_to opp.name, opp %></td>
        <td><%= opp.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
